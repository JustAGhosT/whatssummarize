{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/tests",
    "baseUrl": "..",
    "rootDir": "..",
    "jsx": "react-jsx",
    "types": ["node", "jest", "@testing-library/jest-dom", "@testing-library/react", "@testing-library/user-event"],
    "paths": {
      "@/*": ["./frontend/src/*"],
      "@/tests/*": ["./tests/*"]
    }
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "../frontend/src/**/*"
  ]
}
