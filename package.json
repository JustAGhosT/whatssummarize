{
  "name": "whatsapp-conversation-summarizer",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:ui": "turbo run test:ui",
    "generate:test-data": "tsx tools/scripts/generators/test-data.ts",
    "organize:tests": "tsx tools/scripts/organize-tests.ts"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "tools": [
      "tools/test-utils",
      "tools/scripts"
    ]
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^30.0.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20.19.9",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/testing-library__react": "^10.2.0",
    "@types/testing-library__user-event": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-turbo": "^1.12.6",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "husky": "^9.0.11",
    "inquirer": "^9.2.12",
    "lint-staged": "^15.2.2",
    "minimatch": "^10.0.3",
    "ora": "^7.0.1",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.7.0",
    "turbo": "^1.12.6",
    "typescript": "^5.3.3",
    "vite": "^5.4.19",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.6.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,yml,yaml}": [
      "prettier --write"
    ]
  }
}
