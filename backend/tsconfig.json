{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "**/*.d.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"],
  "types": ["node", "express", "body-parser"]
}
