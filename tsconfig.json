{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* This file is the root of the TypeScript project graph */
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/*/src"],
      "@web/*": ["./apps/web/src/*"],
      "@api/*": ["./apps/api/src/*"],
      "@ui/*": ["./packages/ui/src/*"],
      "@config/*": ["./packages/config/src/*"],
      "@utils/*": ["./packages/utils/src/*"],
      "@test-utils/*": ["./tools/test-utils/src/*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "vite/client",
      "vitest/globals",
      "@testing-library/jest-dom",
      "@testing-library/jest-dom/vitest"
    ]
  },
  "include": [
    "./apps/**/*",
    "./packages/**/*",
    "./tools/**/*",
    "**/*.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.next",
    "**/.turbo",
    "**/coverage"
  ]
}
