{
  "manifest_version": 3,
  "name": "WhatsSummarize - WhatsApp Chat Analyzer",
  "version": "1.0.0",
  "description": "Extract and analyze your WhatsApp Web conversations with AI-powered summaries",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ]
}
