{
  "name": "whatssummarize-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend service for WhatsApp group monitoring",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --watch --config=jest.config.js",
    "test:coverage": "jest --coverage --config=jest.config.js",
    "test:ci": "jest --ci --runInBand --detectOpenHandles --forceExit --config=jest.config.js",
    "typeorm": "ts-node --require tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -- -d src/config/datasource.ts",
    "migration:run": "npm run typeorm migration:run -- -d src/config/datasource.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d src/config/datasource.ts",
    "migration:show": "npm run typeorm migration:show -- -d src/config/datasource.ts",
    "db:create-migration": "npm run typeorm migration:create -- -d src/config/datasource.ts src/db/migrations/",
    "db:reset": "npm run typeorm schema:drop -- -d src/config/datasource.ts && npm run migration:run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "puppeteer": "^21.0.0",
    "qrcode-terminal": "^0.12.0",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.25",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.20.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "@jest/globals": "^29.7.0",
    "@types/jest-environment-jsdom": "^29.5.7",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.5",
    "jest-sonar-reporter": "^2.0.0",
    "supertest": "^6.3.3",
    "ts-mock-imports": "^1.3.0",
    "tsconfig-paths": "^4.2.0"
  }
}
