{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Enable all strict type-checking options
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    
    // Enable better error checking and reporting
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    
    // Module resolution
    "moduleResolution": "node",
    
    // Source map support
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "mapRoot": "./dist",
    "sourceRoot": "./src",
    
    // Enable experimental features
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // Enable incremental compilation
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo",
    
    // Type checking
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Output
    "outDir": "./dist",
    "rootDir": "./src",
    
    // Library files - using ES2022 instead of es2023
    "lib": ["ES2022", "DOM"],
    
    // Type declarations
    "types": ["node"],
    
    // Module
    "module": "ESNext",
    "target": "ES2022",
    
    // Other
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    // Paths
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    
    // Type roots
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__",
    "**/*.d.ts"
  ]
}
